@page "/"
@using Microsoft.AspNetCore.Components.Web

@Messages.AppTitle

<PageTitle>@Messages.AppTitle</PageTitle>
<TopBar/>
<Specials OnClickSpecial="ViewModel.ConfigurePizza"></Specials>
<OrderedPizzas ShoppingCart="ShoppingCart"></OrderedPizzas>

